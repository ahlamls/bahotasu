<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{pageTitle}} · Bahotasu</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      :root {
        color-scheme: light;
      }
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background-color: #f6f7fb;
        color: #2b2d31;
      }
      header {
        background: #ffffff;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      }
      footer {
        font-size: 0.85rem;
        color: #6b7280;
      }
      .content {
        min-height: 80vh;
      }
      .card-lite {
        border: 1px solid rgba(15, 23, 42, 0.08);
        border-radius: 0.75rem;
        background: #ffffff;
      }
      .user-pill {
        width: 32px;
        height: 32px;
        border-radius: 999px;
        background: #e0e7ff;
        color: #1d4ed8;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.85rem;
      }
      .nav-scroll-wrapper {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }
      .nav-scroll-wrapper::-webkit-scrollbar {
        display: none;
      }
    </style>
  </head>
  <body>
    <header class="py-3 border-bottom bg-white">
      <div class="container d-flex flex-wrap justify-content-between align-items-center gap-3">
        <div class="d-flex align-items-center gap-3">
          <a class="text-decoration-none d-flex align-items-center" href="/">
            <img src="{{logoIconSrc}}" alt="Bahotasu icon" style="height: 32px; width: 32px;" />
            <img src="{{logoTextSrc}}" alt="Bahotasu" style="height: 20px; margin-left: 0.4rem;" />
          </a>
        </div>
        {{#currentUser}}
        <div class="d-flex align-items-center gap-3">
          <a href="{{profileUrl}}" class="d-flex align-items-center text-decoration-none text-dark">
            <span class="user-pill me-2">{{initials}}</span>
            <span class="fw-semibold small d-none d-md-inline">{{name}}</span>
          </a>
          {{#logoutAction}}
          <form method="post" action="{{logoutAction}}">
            <button class="btn btn-outline-danger btn-sm" type="submit">Logout</button>
          </form>
          {{/logoutAction}}
        </div>
        {{/currentUser}}
      </div>
    </header>
    {{#superAdminNav}}
    <nav class="bg-white border-bottom" aria-label="Superadmin navigation">
      <div class="container py-2">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-3">
      
          <div class="nav-scroll-wrapper w-100">
            <ul class="nav nav-pills flex-nowrap gap-2">
              {{#items}}
              <li class="nav-item">
                <a class="nav-link{{#active}} active fw-semibold{{/active}}" href="{{href}}">{{label}}</a>
              </li>
              {{/items}}
            </ul>
          </div>
        </div>
      </div>
    </nav>
    {{/superAdminNav}}

    <main class="content py-5">
      <div class="container">
        {{{body}}}
      </div>
    </main>

    <footer class="py-4 border-top">
      <div class="container d-flex flex-column flex-md-row justify-content-between">
        <span>© {{year}} Bahotasu</span>
        <span>Lean log access for small teams</span>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-QJHtvGhmr9bInhZRA2GH1pGC7Jh4AgpsuJcKh6ir3Tvk5Q5vvoEH3sl0sibVcOQV"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
