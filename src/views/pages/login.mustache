<section class="login-card text-center">
  {{#logoSrc}}
  <img src="{{.}}" alt="Bahotasu" style="width: 180px; margin-bottom: 1rem;" />
  {{/logoSrc}}
  <h1 class="h5 mb-3">Please login to continue</h1>
  {{#error}}
  <div class="alert alert-danger small text-start" role="alert">
    {{error}}
  </div>
  {{/error}}
  {{#notice}}
  <div class="alert alert-success small text-start" role="alert">
    {{notice}}
  </div>
  {{/notice}}
  <form method="post" action="/login" class="text-start" novalidate>
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <div class="mb-3">
      <label class="form-label small text-uppercase text-secondary" for="username">Username or Email</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        value="{{usernameValue}}"
        required
        autocomplete="username"
      />
    </div>
    <div class="mb-3">
      <label class="form-label small text-uppercase text-secondary" for="password">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
        autocomplete="current-password"
      />
    </div>
    <div class="form-check mb-4">
      <input
        class="form-check-input"
        type="checkbox"
        value="1"
        id="remember"
        name="remember"
        {{#rememberChecked}}checked{{/rememberChecked}}
      />
      <label class="form-check-label" for="remember">
        Remember me
      </label>
    </div>
    <div class="d-grid">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </form>
</section>
