<section class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
  <div>
    <p class="text-secondary mb-1 small text-uppercase">Administration</p>
    <h1 class="h4 fw-semibold mb-0">User management</h1>
  </div>
  <a class="btn btn-primary" href="/users/new">Create user</a>
</section>

{{#notice}}
<div class="alert alert-success" role="alert">
  {{notice}}
</div>
{{/notice}}
{{#error}}
<div class="alert alert-danger" role="alert">
  {{error}}
</div>
{{/error}}

<div class="table-responsive card-lite">
  <table class="table align-middle mb-0">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col" class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#users}}
      <tr>
        <td class="fw-semibold">{{name}}</td>
        <td><code>{{username}}</code></td>
        <td>{{email}}</td>
        <td class="text-capitalize">{{role}}</td>
        <td class="text-end">
          {{#canManage}}
          <div class="d-flex flex-wrap gap-2 justify-content-end">
            <a class="btn btn-outline-secondary btn-sm" href="/users/{{id}}/edit">Edit</a>
            <a class="btn btn-outline-primary btn-sm" href="/users/{{id}}/groups">Groups</a>
            <form method="post" action="/users/{{id}}/delete" onsubmit="return confirm('Delete this user?');">
              <input type="hidden" name="_csrf" value="{{csrfToken}}" />
              <button class="btn btn-outline-danger btn-sm" type="submit">Delete</button>
            </form>
          </div>
          {{/canManage}}
          {{^canManage}}
          {{/canManage}}
        </td>
      </tr>
      {{/users}}
      {{^users}}
      <tr>
        <td colspan="5" class="text-center text-secondary py-4">No users found.</td>
      </tr>
      {{/users}}
    </tbody>
  </table>
</div>
